<%
  @title = 'Events'
  @left_column_partial = 'reg_admin/reg_admin_left_menu' 
%>

<h1>Edit <%= @event.kind %></h1>

<%= form_tag(:controller => 'events', :action => 'update', :id => @event) do %>
  <%= render :partial => 'form' %>
  <br />
  <%= submit_tag 'Save' %>
<% end %>

<table>
<tr>
<td>
<%= form_tag(:controller => 'events', :action => 'redirect_to_last_list') do %> 
  <%= submit_tag "Cancel" %>
<% end %>
</td>

<td>
<%= form_tag(:controller => 'events', :action => 'destroy', :id => @event) do %>
  <%= submit_tag "Delete" %>
  &nbsp;
<% end %>
</td>
</tr>
</table>
