<%-
  @title = 'Surveys'
  @left_column_partial = 'reg_admin/reg_admin_left_menu' 
-%>

<h1>Edit Survey</h1>

<%= form_tag :controller => 'surveys', :action => 'update', :id => @survey %>
  <%= render :partial => 'form' %>
  <%= submit_tag 'Save' %>
<% end %>

<table>
	<tr>
		<td>
		<%= form_tag :controller => 'surveys', :action => 'index' %> 
		  <%= submit_tag "Cancel" %>
		<% end %>
		</td>
		
		<td>
		<%= form_tag :controller => 'surveys', :action => 'destroy', :id => @survey %>
		  <%= submit_tag "Delete" %>
		  &nbsp;
		<% end %>
		</td>
	</tr>
</table>
